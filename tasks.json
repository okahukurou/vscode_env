{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "lazygit",
      "type": "shell",
      "command": "lazygit",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "clear": true,
        "close": true,
      },
      "options": {
        "env": {
          "PATH": "/opt/homebrew/bin:~/scripts:${env:PATH}"
        }
      }
    },
    {
      "label": "proxy-login",
      "type": "process",
      "command": "proxy-login.sh",
      "presentation": {
        "reveal": "never",
        "focus": false,
        "panel": "dedicated",
        "clear": true,
        "close": true,
      },
      "options": {
        "env": {
          "PATH": "~/scripts:${env:PATH}"
        }
      }
    }
  ]
}
